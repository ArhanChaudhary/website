---
interface Props {
  src: string;
  width?: number;
  // biome-ignore lint/suspicious/noExplicitAny: <explanation>
  [key: string]: any;
}

const { src, poster, alt, width, ...attrs } = Astro.props;
---

<video controls {width} {...attrs}>
  <source {src} type="video/mp4" />
  Your browser does not support the video tag.
</video>

<style lang="scss">
  video {
    margin: 0 auto;
    max-width: 100%;
    height: auto;
    display: block;
  }
</style>
