---
import { Image } from "astro:assets";

interface Props {
  src: ImageMetadata;
  alt: string;
  desc?: string;
  width?: number | `${number}`;
  [key: string]: any;
}

const { src, alt, desc, width, ...attrs } = Astro.props;
---

<div class="content-image-positioner">
  <span class="content-image-wrapper">
    <Image
      {src}
      {alt}
      {...attrs}
      width={width === undefined && attrs.height === undefined ? 1000 : width}
    />
    {desc && <div class="content-image-alt-text" set:html={desc} />}
  </span>
</div>
