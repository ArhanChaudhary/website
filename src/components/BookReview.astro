---
import type { CollectionEntry } from "astro:content";
import { decodeFileName } from "../assets/utils";

interface Props {
  section: CollectionEntry<"book-review">;
}

const { section } = Astro.props;
const { url, rating, author, genre } = section.data;
const { Content } = await section.render();
---

<h2>
  <a href={url} class="white-link">{decodeFileName(section.id)}</a>
</h2>
<div class="info">
  Genre: {genre}
  <br />
  Author{author.includes(",") && "s"}: {author}
</div>
<div class="stars">
  {Array.from({ length: Math.floor(rating) }, () => <span>&#9733;</span>)}
  {
    rating % 1 !== 0 && (
      <span class="half-star">
        <span class="hitbox">&#9733;</span>
        <span class="first-half">&#9733;</span>
        <span class="second-half">&#9734;</span>
      </span>
    )
  }
  {Array.from({ length: 5 - Math.ceil(rating) }, () => <span>&#9734;</span>)}
</div>
<div class="half-indent offwhite">
  <Content />
</div>

<style lang="scss">
  @use "../assets/variables";

  .half-indent {
    margin-left: 30px;
    margin-bottom: 3em;
  }

  h2 {
    margin-bottom: 2px;
  }

  a {
    color: hsl(0, 0%, 95%);
  }

  .info {
    color: hsl(0, 0%, 50%);
    margin-bottom: 20px;
  }

  .stars {
    color: yellow;
    font-size: 1.5em;
    display: flex;

    .half-star {
      position: relative;

      .hitbox {
        visibility: hidden;
      }
      .first-half,
      .second-half {
        position: absolute;
        overflow: hidden;
      }
      .first-half {
        width: 48%;
        left: 0;
      }
      .second-half {
        right: 0;
        direction: rtl;
      }
    }
  }

  @media (max-width: variables.$mobile-width) {
    .half-indent {
      margin-left: 0;
    }
  }
</style>
