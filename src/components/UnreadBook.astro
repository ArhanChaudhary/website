---
interface Props {
  title: string;
  author: string;
  url: string;
}

const { title, author, url } = Astro.props;
---


<div class="indent">
  <a href={url}>{title}</a>
  <div class="author">by {author}</div>
</div>

<style style="scss">
  .indent {
    padding: 0.75em 0;
  }

  a {
    color: hsl(0, 0%, 95%);
    font-size: 1.2em;
    text-decoration: none;
    margin-bottom: 2px;

    &:hover {
      text-decoration: underline;
      color: hsl(0, 0%, 85%);
    }
  }

  .author {
    color: hsl(0, 0%, 50%);
  }
</style>