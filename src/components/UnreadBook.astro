---
interface Props {
  title: string;
  author: string;
  url: string;
}

const { title, author, url } = Astro.props;
---


<div class="indent">
  <a href={url}>{title}</a>
  <br>
  <span>by {author}</span>
</div>

<style style="scss">
  div {
    padding: 0.75em 0;
  }

  a {
    color: hsl(0, 0%, 95%);
    font-size: 1.2em;
    text-decoration: none;

    &:hover {
      text-decoration: underline;
      color: hsl(0, 0%, 85%);
    }
  }

  span {
    color: hsl(0, 0%, 50%);
  }
</style>