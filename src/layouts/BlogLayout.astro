---
import Layout from "./Layout.astro";

interface Props {
  title: string;
  description?: string;
  pubDate?: Date;
}

const { description = "Arhan's Blog", pubDate, title } = Astro.props;
---

<Layout {title} description={description} sshUser="blog">
  <div class="system-ui" id="max-width-wrapper">
    <h1>{title}</h1>
    <p>
      {
        pubDate
          ? `Published ${pubDate.toLocaleDateString("en-US", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })}`
          : "!! UNPUBLISHED !!"
      }
      &#x2022; <a href="/blog/">more posts</a> &#x2022; <a href="/rss.xml"
        >rss</a
      >
    </p>
    <hr />
    <div class="offwhite" id="blog-body">
      <slot />
    </div>
    {
      pubDate && !import.meta.env.DEV && (
        // @ts-ignore
        <script
          is:inline
          src="https://utteranc.es/client.js"
          repo="ArhanChaudhary/website"
          issue-term="title"
          label="blog"
          theme="github-dark"
          crossorigin="anonymous"
          async
        />
      )
    }
  </div>
</Layout>

<style lang="scss">
  #max-width-wrapper {
    margin-bottom: 10px;
    margin-right: auto;
    margin-left: auto;

    #blog-body {
      padding-bottom: 15px;
    }
  }
</style>

<style lang="scss" is:global>
  @use "../assets/variables";

  #nav-hamburger,
  nav {
    display: none !important;
  }

  #flex-wrapper {
    margin-right: initial !important;
    padding-right: initial !important;
  }

  main {
    margin-left: var(--mobile-outer-padding) !important;
  }

  #troll-flex-wrapper {
    margin-left: var(--main-margin-left);
  }

  @media (max-width: variables.$mobile-width) {
    #troll-flex-wrapper {
      margin-left: var(--mobile-outer-padding) !important;
    }
  }
</style>
