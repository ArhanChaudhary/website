---
import Layout from "./Layout.astro";
const { blog } = Astro.props;
---

<Layout
  title={blog.url.split("/").at(-1)}
  description={blog.frontmatter.description}
  sshUser="blog"
  highlightIndex={3}
>
  <div class="system-ui" id="max-width-wrapper">
    <h1>{blog.url.split("/").at(-1)}</h1>
    <p>
      Published {
        blog.frontmatter.pubDate
          ? new Date(blog.frontmatter.pubDate).toLocaleDateString("en-US", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })
          : "N.A."
      } &#x2022; <a href="/blog">more posts</a> &#x2022; <a href="/rss.xml"
        >rss</a
      >
    </p>
    <hr />
    <slot />
    <script
      is:inline
      src="https://utteranc.es/client.js"
      repo="ArhanChaudhary/website"
      issue-term="title"
      label="blog"
      theme="github-dark"
      crossorigin="anonymous"
      async></script>
  </div>
</Layout>

<style lang="scss">
  #max-width-wrapper {
    margin-bottom: 10px;
  }
</style>

<style lang="scss" is:global>
  img {
    max-width: 100%;
    margin: 0 auto;
    display: block;
    height: auto;
  }
</style>
